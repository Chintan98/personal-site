---
import Layout from '../layouts/Layout.astro';
import ProjectCard from '../components/ProjectCard.astro';

const projects = [
  {
    title: "Tesla (TSLA) Strategic Valuation",
    description: "A comprehensive Discounted Cash Flow (DCF) model projecting 5-year growth, including sensitivity analysis on WACC and terminal rates. The model identifies key value drivers and potential risks for the EV manufacturer.",
    link: "#",
    tags: ["Financial Modeling", "Excel", "Equity Research"]
  },
  {
    title: "SaaS Industry KPI Dashboard",
    description: "Automated analysis of key metrics (CAC, LTV, Churn) across top 10 SaaS competitors using Python and Tableau. This dashboard provides real-time insights into market trends and operational efficiency.",
    link: "#",
    tags: ["Python", "Data Analysis", "SQL"]
  },
  {
    title: "Portfolio Optimization Strategy",
    description: "Developed a quantitative investment strategy using Modern Portfolio Theory to maximize Sharpe ratio for a mixed asset portfolio.",
    link: "#",
    tags: ["Python", "Quantitative Finance", "Statistics"]
  }
];
---

<Layout title="Projects | Chintan">
  <section class="py-12 md:py-20">
    <h1 class="text-3xl md:text-5xl font-serif font-bold mb-6 tracking-tight text-gray-900">Selected Works</h1>
    <p class="text-xl text-gray-600 max-w-2xl leading-relaxed mb-12">
      A collection of financial models, data analysis projects, and strategic research.
    </p>
    
    <div class="flex flex-col gap-8">
      {projects.map(project => (
        <ProjectCard {...project} />
      ))}
    </div>
  </section>
</Layout>
